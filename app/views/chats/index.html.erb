<div class="container">
  <div class="row" style="margin-top: 25px;">
    <div class="col-lg-10 col-lg-offset-1">
      <div class="well" >
        <div class="row">
          <div class="col-lg-12">
            <table class="table table-condensed">
              <% if @user_chats.blank? %>
                No chats found
              <% else %>
                <% @user_chats.each do |chat| %>
                  <tr>
                    <td><%= link_to chat.recipient.email, chat_path(chat) %></td>
                  </tr>
                <% end %>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>