<div class="container">
  <div class="row" style="margin-top: 25px;">
    <div class="col-lg-10 col-lg-offset-1">
      <div class="well" >
        <div class="row">
          <div class="col-lg-12">
            <h3>Messages</h3>
            <ul id="chat">
              <%= render partial: 'message_row', messages: @messages %>
            </ul>

            <hr>

            <%= form_for Message.new, remote: true do |f| %>
              <%= f.text_field :body %>
              <%= f.submit "Send" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= subscribe_to "/messages/new" %>
