<div class="container">
  <div class="row" style="margin-top: 25px;">
    <div class="col-lg-10 col-lg-offset-1">
      <div class="well" >
        <h4><b>Vote for photo</b></h4><hr>
        <div class="row">
          <div class="col-lg-12 photo-container">
            <% if @photo.blank? %>
              <h5 id="no-media">No photos found</h5>
            <% else %>
              <%= form_tag("/vote", method: 'post', remote: true ) do %>
                <%= submit_tag 'dislike', class: 'btn btn-danger', style: 'margin-left: 15px; text-transform: uppercase;'  %>
                <%= submit_tag 'like', class: 'btn btn-success', style: 'margin-left: 15px; text-transform: uppercase;'  %>
                <br><br>
                <%= hidden_field_tag 'media_id', @photo.id %>
                <div class="col-lg-4">
                  <div class="thumbnail">
                    <%= image_tag @photo.file_name.url, class: "photo-container" %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>